<!DOCTYPE html>
<html dir="ltr" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="../assets/images/favicon.png">
    <title>Adminmart Template - The Ultimate Multipurpose admin template</title>
    <!-- Custom CSS -->
    <link href="../dist/css/style.min.css" rel="stylesheet">
    <link href="../dist/css/myCss.css" rel="stylesheet">

    <!-- This Page CSS -->
    <link rel="stylesheet" type="text/css" href="../assets/extra-libs/prism/prism.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
<![endif]-->
</head>

<body>
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper" data-theme="light" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
        data-sidebar-position="fixed" data-header-position="fixed" data-boxed-layout="full">
        <!-- ============================================================== -->
        <!-- Topbar header - style you can find in pages.scss -->
        <!-- ============================================================== -->
        {{> header}}
        <!-- ============================================================== -->
        <!-- End Topbar header -->
        <!-- ============================================================== -->


        <!-- ============================================================== -->
        <!-- Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        {{> leftSidebar_superAdmin}}

        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->

        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-7 align-self-center">
                        <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">Administradores</h4>
                        <div class="d-flex align-items-center">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb m-0 p-0">
                                    <li class="breadcrumb-item text-muted active">Usuarios
                                    </li>
                                    <li class="breadcrumb-item text-muted active" aria-current="page">Administradores
                                    </li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- Search -->
                    <!-- ============================================================== -->
                    <div class="col-5 align-self-center">
                        <ul class="navbar-nav float-right">
                            <!-- ============================================================== -->
                            <!-- Search -->
                            <!-- ============================================================== -->
                            <li class="nav-item d-none d-md-block">
                                <a class="nav-link a-search" href="javascript:void(0)">
                                    <form>
                                        <div class="customize-input div-search">
                                            <input
                                                class="form-control custom-shadow custom-radius border-0 bg-white search"
                                                type="search" placeholder="Search" aria-label="Search">
                                            <i class="form-control-icon icon-search" data-feather="search"></i>
                                        </div>
                                    </form>
                                </a>
                            </li>
                            <!-- ============================================================== -->
                            <!-- User profile and search -->
                            <!-- ============================================================== -->
                        </ul>
                    </div>

                </div>
                <div class="row">
                    <!-- Column -->
                    <div class="col-md-6 col-lg-6 col-xlg-6">
                        <button type="button" class=" miBtn btn btn-rounded" data-toggle="modal"
                            data-target="#modalAñadirPerfil">
                            <i class="fas fa-user-plus"></i>
                            Añadir Administrador
                        </button>
                    </div>
                </div>
                <br>

            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <!-- Row -->
                <div class="row">
                    <div class="col-12">
                        <!-- Row -->
                        <div class="row">
                            <!-- column -->
                            {{#if data.administradores }}
                            {{#each data.administradores  as |item|}}
                            <div class="col-lg-3 col-md-6">
                                <!-- Card -->
                                <div class="card" id="{{item.[6]}}">
                                    <div class="card-div-top" id="imagen">
                                        <img class=" card-img-top "
                                            src="../assets/images/perfil-administradores/{{item.[5]}}"
                                            data-target="#modalIMG" data-toggle="modal" alt="Card image cap">

                                    </div>
                                    <div class="card-header"
                                        style="background: linear-gradient(to right, #8971ea, #7f72ea, #7574ea, #6a75e9, #5f76e8);">
                                        <h4 class="mb-0 text-white" name="nombre">{{item.[0]}}</h4>
                                    </div>
                                    <div class="card-body">
                                        <h4 class=" card-title">Correo</h4>
                                        <p class="card-text">{{item.[1]}}</p>
                                        <div class="row divInfo">
                                            <div class="col-lg-6 col-md-6">
                                                <h4 class=" card-title">Cedula</h4>
                                                <p class="card-text">{{item.[2]}}</p>
                                            </div>
                                            <div class="col-lg-6 col-md-6">
                                                <h4 class=" card-title">Celular</h4>
                                                <p class="card-text">{{item.[3]}}</p>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-6 col-md-6">
                                                <h4 class=" card-title">Estado</h4>
                                                <p class="card-text">{{item.[4]}}</p>
                                            </div>
                                        </div>

                                    </div>
                                    <a href="" class="card-btn-eliminar img-fluid btn-danger" data-toggle="modal"
                                        data-target="#danger-header-modal" id="btnEliminar">Eliminar</a>
                                    <a href="javascript:void(0)" class="card-img-bottom img-fluid btn-primary"
                                        data-toggle="modal" data-target="#modalEditarPerfil" id="btnEditar">Editar</a>

                                </div>
                                <!-- Card -->
                            </div>
                            <!-- column -->
                            {{/each}}
                            {{/if}}

                        </div>
                        <!-- Row -->
                    </div>
                </div>
                <!-- End Row -->

                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <!-- The Modal Image -->
            <footer class="footer text-center text-muted">
                All Rights Reserved by Adminmart. Designed and Developed by <a
                    href="https://wrappixel.com">WrapPixel</a>.
            </footer>
            <!-- ============================================================== -->
            <!-- End footer -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->


        <!-- Modal Confirmacion de eliminar -->
        <div id="danger-header-modal" class="modal fade" tabindex="-1" role="dialog"
            aria-labelledby="danger-header-modalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header modal-colored-header bg-danger">
                        <h4 class="modal-title" id="danger-header-modalLabel">Eliminar Administrador</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    </div>
                    <div class="modal-body">
                        <h5 class="mt-0">¿Desea eliminar a <strong id="nombreModalEliminar"> Sergio Aparicio </strong>?
                        </h5>
                        <p class=" modal-dialog">Recuerde que esta acción no tiene retroceso.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-danger">Confirmar</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </div>
    <!-- Modal EDITAR ADMINISTRADOR-->
    <div id="modalEditarPerfil" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-body">
                    <div class="text-center mt-2 mb-4">
                        <span><img class="mr-2" src="../assets/images/logo-icon.png" alt="" height="18"><img
                                src="../assets/images/logo-text.png" alt="" height="18"></span>
                    </div>
                    <form class="pl-3 pr-3" action="#">
                        <div class="form-group">
                            <label for="nombreModalEditar">Nombre</label>
                            <input name="nombreModalEditar" id="nombreModalEditar" class="form-control" type="text"
                                required="" placeholder="Nombre" maxlength="50">
                        </div>
                        <div class="form-group">
                            <label for="fotoModalAñadir">Foto de perfil</label>
                            <input name="fotoModalAñadir" id="fotoModalAñadir" class="form-control-file " type="file"
                                accept="image/*" required="" placeholder="Foto de Perfil" maxlength="50">
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="cedulaModalEditar">Cedula</label>
                                    <input name="cedulaModalEditar" id="cedulaModalEditar" class="form-control"
                                        type="number" placeholder="Cedula" maxlength="10">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="celularModalEditar">Celular</label>
                                    <input name="celularModalEditar" id="celularModalEditar" class="form-control"
                                        type="number" placeholder="Cedula" maxlength="11">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="estadoModalEditar">Estado</label>
                                    <select name="estadoModalEditar" id="estadoModalEditar" class="form-control">
                                        {{#if data.estados }}
                                        {{#each data.estados as |item|}}
                                        <option value="{{ item.[0]}}">{{item.[0]}}</option>
                                        {{/each}}
                                        {{else}}
                                        <option value="0" disabled selected>No hay estados Registrados</option>
                                        {{/if}}
                                    </select>
                                </div>
                            </div>

                        </div>

                        <br>
                        <div class="form-group text-center">
                            <button class="btn btn-light" data-dismiss="modal">Cancelar</button>
                            <button class="btn btn-primary" type="submit">Guardar Cambios</button>
                        </div>

                    </form>

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <!-- Modal AÑADIR ADMINISTRADOR -->
    <div id="modalAñadirPerfil" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-body">
                    <div class="text-center mt-2 mb-4">
                        <span><img class="mr-2" src="../assets/images/logo-icon.png" alt="" height="18"><img
                                src="../assets/images/logo-text.png" alt="" height="18"></span>
                    </div>
                    <form class="pl-3 pr-3" action="#">
                        <div class="form-group">
                            <label for="nombreModalAñadir">Nombre</label>
                            <input name="nombreModalAñadir" id="nombreModalAñadir" class="form-control" type="text"
                                required="" placeholder="Nombre" maxlength="50">
                        </div>
                        <div class="form-group">
                            <label for="fotoModalAñadir">Foto de perfil</label>
                            <input name="fotoModalAñadir" id="fotoModalAñadir" class="form-control-file " type="file"
                                accept="image/*" required="" placeholder="Foto de Perfil" maxlength="50">
                        </div>
                        <div class="form-group">
                            <label for="correoModalAñadir">Correo Electronico</label>
                            <input name="correoModalAñadir" id="correoModalAñadir" class="form-control" type="email"
                                placeholder="Correo Electronico">
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="cedulaModalAñadir">Cedula</label>
                                    <input name="cedulaModalAñadir" id="cedulaModaAñadirr" class="form-control"
                                        type="number" placeholder="Cedula" maxlength="10">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="celularModalAñadir">Celular</label>
                                    <input name="celularModalAñadir" id="celularModalAñadir" class="form-control"
                                        type="number" placeholder="Cedula" maxlength="11">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="estadoModalAñadir">Estado</label>
                                    <select name="estadoModalAñadir" id="estadoModalAñadir" class="form-control">
                                        {{#if data.estados }}
                                        {{#each data.estados as |item|}}
                                        <option value="{{ item.[0]}}">{{item.[0]}}</option>
                                        {{/each}}
                                        {{else}}
                                        <option value="0" disabled selected>No estados Registrados</option>
                                        {{/if}}
                                    </select>
                                </div>
                            </div>

                        </div>

                        <br>
                        <div class="form-group text-center">
                            <button class="btn btn-light" data-dismiss="modal">Cancelar</button>
                            <button class="btn btn-primary" type="submit">Añadir Administrador</button>
                        </div>

                    </form>

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="../assets/libs/popper.js/dist/umd/popper.min.js"></script>
    <script src="../assets/libs/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- apps -->
    <!-- apps -->
    <script src="../dist/js/app-style-switcher.js"></script>
    <script src="../dist/js/feather.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="../assets/libs/perfect-scrollbar/dist/perfect-scrollbar.jquery.min.js"></script>
    <script src="../assets/extra-libs/sparkline/sparkline.js"></script>
    <!--Wave Effects -->
    <!-- themejs -->
    <!--Menu sidebar -->
    <script src="../dist/js/sidebarmenu.js"></script>
    <!--Custom JavaScript -->
    <script src="../dist/js/custom.min.js"></script>
    <!-- This Page JS -->
    <script src="../assets/extra-libs/prism/prism.js"></script>
    <script>
        //Recojemos las variables de los Administrador que nos envian el servidor por medio de HBS
        var administradores = {};
    </script>

    {{#if data.administradores }}
    {{#each data.administradores  as |item|}}
    <script>
        administradores["{{ item.[6] }}"] = []
        administradores["{{ item.[6] }}"][0] = "{{ item.[0] }}"
        administradores["{{ item.[6] }}"][1] = "{{ item.[1] }}"
        administradores["{{ item.[6] }}"][2] = "{{ item.[2] }}"
        administradores["{{ item.[6] }}"][3] = "{{ item.[3] }}"
        administradores["{{ item.[6] }}"][4] = "{{ item.[4] }}"
        administradores["{{ item.[6] }}"][5] = "{{ item.[5] }}"
    </script>

    {{/each}}
    {{/if}}
    <script>
        var idUltimoEliminado;
        var idUltimoEditado;
        $(document).on("click", "#btnEliminar", function () {
            idUltimoEliminado = $(this).parent().attr("id");
            $("strong#nombreModalEliminar").text(administradores[idUltimoEliminado][0]);
        })

        $(document).on("click", "#btnEditar", function () {
            idUltimoEditado = $(this).parent().attr("id");

            //Rellenamos los datos correspondientes en el modal Editar
            $("#nombreModalEditar").val(administradores[idUltimoEditado][0]);
            $("#correoModalEditar").val(administradores[idUltimoEditado][1]);
            $("#cedulaModalEditar").val(administradores[idUltimoEditado][2]);
            $("#celularModalEditar").val(administradores[idUltimoEditado][3]);
            $("#estadoModalEditar").val(administradores[idUltimoEditado][4]);



        })
    </script>
</body>

</html>