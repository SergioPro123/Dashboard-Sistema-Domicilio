    <!-- Modal GENERAR SERVICIO -->
    <div id="signup-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-body">
                    <div class="text-center mt-2 mb-4">
                        <span><img class="mr-2" src="../assets/images/logo-icon.png" alt="" height="18"><img
                                src="../assets/images/logo-text.png" alt="" height="18"></span>
                    </div>

                    <form class="pl-3 pr-3" action="#">
                        <div class="form-group">
                            <label for="cliente">Cliente</label><br>
                            <select id="cliente" class="js-example-basic-single " style="width: 100%" name="state"
                                required="">
                                {{#if data.clientes }}
                                <option value="0" disabled selected>--Seleccione un cliente--</option>
                                {{#each data.clientes as |item|}}
                                <option value="{{item.[0]}}">{{item.[1]}}</option>
                                {{/each}}

                                {{else}}
                                <option value="0" disabled selected>No hay clientes registrados</option>

                                {{/if}}

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="direccion">Direccion</label><br>
                            <select id="direccion" class="js-example-basic-single " style="width: 100%" name="state"
                                required="">
                                <option></option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="tipoServicio">Tipo de Servicio</label><br>
                            <select id="tipoServicio" class="js-example-basic-single " style="width: 100%" name="state"
                                required="">
                                {{#if data.tipoServicios }}
                                <option value="0" disabled selected>--Seleccione el tipo de servicio--</option>
                                {{#each data.tipoServicios as |item|}}
                                <option value="{{item.[0]}}">{{item.[1]}}</option>
                                {{/each}}

                                {{else}}
                                <option value="0" disabled selected>No se encuentra establecido tipos de servicios
                                </option>

                                {{/if}}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="precioServicio">Precio</label>
                            <input name="precioServicio" id="precioServicio" class="form-control" type="text"
                                required="" placeholder="$ 0" disabled>
                        </div>
                        <div class="form-group">
                            <label for="Adicional">Adicional</label>
                            <input name="Adicional" id="Adicional" class="form-control" type="number" placeholder="$ 0"
                                min="0">
                        </div>
                        <div class="form-group">
                            <label for="descripcion">Descripcion</label>
                            <textarea name="descripcion" id="descripcion" class="form-control rounded-0"
                                id="exampleFormControlTextarea2" rows="3"
                                placeholder="Descripcion del Servicio"></textarea>
                        </div>

                        <div class="form-group text-center">
                            <button class="btn btn-light" data-dismiss="modal">Cancelar</button>
                            <button class="btn btn-primary" type="submit">Generar Servicio</button>
                        </div>

                    </form>

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
