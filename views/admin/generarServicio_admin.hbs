        $(document).ready(function () {
            selects();
        });

        async function selects() {
            await $('.js-example-basic-single#cliente').select2({
                placeholder: "Seleccione un Cliente",
                allowClear: true

            })
            await $('.js-example-basic-single#direccion').select2({
