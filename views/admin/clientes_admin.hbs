                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->

                <!-- basic table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <!-- Column -->
                                    <div class="col-md-6 col-lg-6 col-xlg-6">
                                        <button type="button" class=" miBtn btn btn-rounded" data-toggle="modal"
                                            data-target="#modalAnadirPerfil">
                                            <i class="fas fa-user-plus"></i>
                                            Añadir Cliente
                                        </button>
                                    </div>
                                </div>
                                <br>
                                <!-- Tabla de servicios -->
                                <div class="table-responsive text-center">
                                    <table id="zero_config" class="table table-striped table-bordered no-wrap">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Celular</th>
                                                <th>Direcciones</th>
                                                <th>Servicios Atendidos</th>
                                                <th>Acción</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#if data.clientes}}
                                            {{#each data.clientes as |item|}}
                                            <tr>
                                                <td>{{item.[0]}}</td>
                                                <td>{{item.[1]}}</td>
                                                {{#if item.[2].[0]}}
                                                <td id="{{item.[4]}}"> <a href="#" data-toggle="modal"
                                                        data-target="#scrollable-modal" id="btnDirecciones">Ver
                                                        Direcciones</a></td>
                                                {{else}}
                                                <td>No hay direcciones</td>
                                                {{/if}}
                                                <td>{{item.[3]}}</td>
                                                <td>
                                                    <div class="row">
                                                        <div class="col" style="text-align: center;" id="{{item.[4]}}">
                                                            <a href='#' class='edit' data-toggle='modal'
                                                                data-target="#modalEditarPerfil" id="btnEditar"><i
                                                                    class='material-icons' data-toggle='tooltip'
                                                                    title='Editar'>&#xE254;</i></a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            {{/each}}
                                            {{/if}}

                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Celular</th>
                                                <th>Direcciones</th>
                                                <th>Servicios Atendidos</th>
                                                <th>Acción</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <!-- The Modal Image -->
            <footer class="footer text-center text-muted">
                All Rights Reserved by Adminmart. Designed and Developed by <a
