    <script src="../dist/js/pages/datatable/datatable-basic.init.js"></script>
    <script src="../assets/extra-libs/prism/prism.js"></script>
    <script src="../dist/js/select2.min.js"></script>
    <script>
        //Recojemos las variables de los domiciliarios que nos envian el servidor por medio de HBS
        var clientes = {};
    </script>

    {{#each data.clientes  as |item|}}
    <script>
        clientes["{{ item.[4] }}"] = []
        clientes["{{ item.[4] }}"][0] = "{{ item.[0] }}"
        clientes["{{ item.[4] }}"][1] = "{{ item.[1] }}"

        clientes["{{ item.[4] }}"][3] = "{{ item.[3] }}"
        clientes["{{ item.[4] }}"][4] = "{{ item.[4] }}"
        //Guardamos las direcciones
        clientes["{{ item.[4] }}"][2] = [];
    </script>

    {{#each item.[2] as |item2|}}
    <script>

        clientes["{{ item.[4] }}"][2]["{{ @index }}"] = "{{ item2 }}"

    </script>
    {{/each}}

    {{/each}}
    <script>
        var idUltimoEliminado;
        var idUltimoEditado;
        var idUltimoDirecciones;

        $("#direccionesModalEditar").select2();

        $(document).on("click", "#btnEditar", function () {
            idUltimoEditado = $(this).parent().attr("id");

            //Rellenamos los datos correspondientes en el modal Editar
            $("#nombreModalEditar").val(clientes[idUltimoEditado][0]);
            $("#celularModalEditar").val(clientes[idUltimoEditado][1]);
            $("#direccionesModalEditar").empty();;
            $("#direccionesModalEditar").select2({ data: clientes[idUltimoEditado][2], tags: "true" });
        })

        //Mostramos las direcciones de los clientes, mediante un modal
        $(document).on("click", "#btnDirecciones", function () {
            idUltimoDirecciones = $(this).parent().attr("id");

            let listaDirecciones = "";
            if (!(clientes[idUltimoDirecciones][2][0] == "")) {
                clientes[idUltimoDirecciones][2].forEach(elemento => {
                    listaDirecciones += `<li class='list-group-item'>${elemento}</li>`;
                })
            } else {
                listaDirecciones += `<li class='list-group-item'>No hay direcciones registradas</li>`;
            }

            $("ul#direccionesModalScrollable").html(listaDirecciones)
        })
        //Enviamos los datos a nuestro servidor, para agregar un nuevo cliente a nuestro sistema.
        $(document).on("submit", "form#formModalAnadirPerfil", function (e) {
            e.stopPropagation();
            let info = $(this).serializeArray();
            let data = {};
            $.each(info, function (i, array) {
                data[array.name] = array.value;
            });
            $.ajax({
                url: '/clientes',
                data,
                method: 'post', //en este caso
                dataType: 'json',
                success: function (response) {
                    //codigo de exito
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert("Error en el Servidor: " + response.msj);
                    }
                },
                error: function (error) {
                    console.log("Error: " + error);
                }
            });
            //cerramos el modal
            $("#modalAnadirPerfil").modal('hide');
            e.preventDefault();
        });
        //Enviamos los datos a nuestro servidor, para actualizar un nuevo cliente a nuestro sistema.
        $(document).on("submit", "form#formModalEditarPerfil", function (e) {
            e.stopPropagation();
            let info = $(this).serializeArray();
            let data = {};
            $.each(info, function (i, array) {
                data[array.name] = array.value;
            });
            data.idCliente = idUltimoEditado;
            console.log(data);
            $.ajax({
                url: '/clientes',
                data,
                method: 'put', //en este caso
                dataType: 'json',
                success: function (response) {
                    //codigo de exito
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert("Error en el Servidor: " + response.msj);
                    }
                },
                error: function (error) {
                    console.log("Error: " + error);
                }
            });
            //cerramos el modal
            $("#modalAnadirPerfil").modal('hide');

            e.preventDefault();
        });
    </script>
</body>

